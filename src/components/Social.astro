---
const {platform, username} = Astro.props;
---

<a href={`https://www.${platform}.com/${username}`}>{platform}</a>


<style>
    
    a{
        padding: 0.5rem 1rem;
        text-decoration: none;
 color: rgb(0, 49, 0);
 background-color: #8f9a5b;
        text-align: center;
        cursor: pointer;
    }

    a:hover {
 border-bottom: 1px solid;
 background: #CDFEAA;
}

</style>